{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "paths": {
            "@d-bot/*": ["*"]
        }
    },
    "exclude": ["node_modules", "dist"]
}
