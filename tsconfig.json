{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@tankbot/*": ["./src/*"],
            "@tankbot/package.json": ["./package.json"]
        },
        "resolveJsonModule": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
}
